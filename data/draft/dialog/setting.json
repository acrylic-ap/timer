{
  "type": "minecraft:confirmation",
  "title": "설정",
  "inputs": [
    {
      "type": "minecraft:boolean",
      "key": "is_result_message",
      "label": "결과 메시지 띄우기",
      "initial": true
    },
    {
      "type": "minecraft:text",
      "key": "message",
      "label": "시간 초과 타이틀 설정",
      "initial": "ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ",
      "max_length": 14
    },
    {
      "type": "minecraft:text",
      "key": "actionbar_message",
      "label": "시간 초과 액션 바 설정",
      "initial": "Time Over!",
      "max_length": 60
    },
    {
      "type": "minecraft:single_option",
      "key": "passed_sound",
      "label": "통과 시 종료음",
      "options": [
        {
          "id": "0",
          "display": "없음"
        },
        {
          "id": "1",
          "display": "업적 달성음"
        },
        {
          "id": "2",
          "display": "드래곤 사망음"
        },
        {
          "id": "3",
          "display": "레벨 업 효과음"
        },
        {
          "id": "4",
          "display": "랜덤(작동 후 효과음 고정)"
        }
      ]
    },
    {
      "type": "minecraft:single_option",
      "key": "failed_sound",
      "label": "불통과 시 종료음",
      "options": [
        {
          "id": "0",
          "display": "없음"
        },
        {
          "id": "1",
          "display": "동굴 효과음"
        },
        {
          "id": "2",
          "display": "디스크 11번"
        },
        {
          "id": "3",
          "display": "디스크 13번"
        },
        {
          "id": "4",
          "display": "염소 효과음"
        },
        {
          "id": "5",
          "display": "랜덤(작동 후 효과음 고정)"
        }
      ]
    },
    {
      "type": "minecraft:number_range",
      "key": "minutes",
      "label": "타이머 분 설정",
      "start": 0,
      "end": 60,
      "step": 1,
      "initial": 0
    },
    {
      "type": "minecraft:number_range",
      "key": "seconds",
      "label": "타이머 초 설정",
      "start": 0,
      "end": 59,
      "step": 1,
      "initial": 30
    },
    {
      "type": "minecraft:number_range",
      "key": "minutes",
      "label": "스톱워치 목표 분 설정(이내)",
      "start": 0,
      "end": 60,
      "step": 1,
      "initial": 0
    },
    {
      "type": "minecraft:number_range",
      "key": "seconds",
      "label": "스톱워치 목표 초 설정(이내)",
      "start": 0,
      "end": 59,
      "step": 1,
      "initial": 30
    }
  ],
   "yes": {
    "label": "확인",
    "action": {
      "type": "minecraft:dynamic/run_command",
      "template": "function timer:apply_settings {seconds: $(seconds), minutes: $(minutes), is_result_message: $(is_result_message), message: \"$(message)\", actionbar_message: \"$(actionbar_message)\", passed_sound: $(passed_sound), failed_sound: $(failed_sound)}"
    }
  },
  "no": {
    "label": "취소"
  }
}